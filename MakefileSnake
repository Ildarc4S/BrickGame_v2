CXX = g++
CXXFLAGS = -Wall -Wextra -Werror -std=c++20
NCURSES_FLAGS = -lncurses
GCOV_FLAGS = --coverage
CHECK_FLAGS = -lgtest -lgtest_main -pthread

SRC_DIR = brick_game/snake
TEST_DIR = tests/snake_tests
GUI_DIR = gui/cli
BUILD_DIR = build/snake
OBJ_DIR = $(BUILD_DIR)/obj
COV_DIR = $(BUILD_DIR)/coverage
LIB_DIR = lib

CFILES = $(wildcard $(SRC_DIR)/*.cpp)
TEST_FILES = $(wildcard $(TEST_DIR)/*.cc)
OBJS = $(patsubst $(SRC_DIR)/%.cpp,$(OBJ_DIR)/snake/%.o,$(CFILES))
TEST_OBJS = $(patsubst $(TEST_DIR)/%.cpp,$(OBJ_DIR)/tests/%.o,$(TEST_FILES))
BIN_DIR = bin/snake

PREFIX = /usr/local
BINDIR = $(PREFIX)/bin
LIBDIR = $(PREFIX)/lib
DOCDIR = $(PREFIX)/share/doc/s21_snake

LIB_PATH = $(LIB_DIR)/s21_snake.a
LIB_NAME = s21_snake.a
EXEC_NAME = s21_snake
TEST_EXEC = test_exec

DOCGEN = doxygen
DOXYFILE = Doxyfile

.PHONY: all install uninstall clean dvi dist test gcov_report rebuild

all: $(LIB_NAME) $(EXEC_NAME)

$(LIB_NAME): $(OBJS)
	mkdir -p $(LIB_DIR)
	ar rcs $(LIB_PATH) $^
	ranlib $(LIB_PATH)

$(OBJ_DIR)/snake/%.o: $(SRC_DIR)/%.cpp
	mkdir -p $(OBJ_DIR)/snake
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJ_DIR)/tests/%.o: $(TEST_DIR)/%.cpp
	mkdir -p $(OBJ_DIR)/tests
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(EXEC_NAME): $(GUI_DIR)/*.cpp main.cpp $(LIB_NAME)
	mkdir -p $(BIN_DIR)
	$(CXX) $(CXXFLAGS) $^ -o $(BIN_DIR)/$@ $(NCURSES_FLAGS)

test: $(TEST_EXEC)
	./$(BIN_DIR)/tests/$<

$(TEST_EXEC): $(TEST_OBJS) $(LIB_PATH)
	mkdir -p $(BIN_DIR)/tests
	$(CXX) $(CXXFLAGS) $^ -o $(BIN_DIR)/tests/$@ $(CHECK_FLAGS)

gcov_report: $(TEST_FILES) $(CFILES)
	mkdir -p $(BIN_DIR)/coverage $(COV_DIR)
	$(CXX) $(CXXFLAGS) $^ $(CHECK_FLAGS) $(GCOV_FLAGS) -o $(BIN_DIR)/coverage/gcov_exec
	./$(BIN_DIR)/coverage/gcov_exec
	lcov --capture --directory $(BIN_DIR)/coverage --output-file $(COV_DIR)/coverage.info --ignore-errors inconsistent
	lcov --remove $(COV_DIR)/coverage.info '/usr/*' '*gtest*' -o $(COV_DIR)/coverage_filtered.info --ignore-errors unused
	genhtml $(COV_DIR)/coverage_filtered.info --output-directory $(COV_DIR)

install: $(EXEC_NAME)
	mkdir -p $(BINDIR) $(LIBDIR) $(DOCDIR)
	install -m 0755 $(BIN_DIR)/$(EXEC_NAME) $(BINDIR)
	install -m 0644 $(LIB_PATH) $(LIBDIR)

uninstall:
	rm -f $(BINDIR)/$(EXEC_NAME)
	rm -f $(LIBDIR)/s21_snake.a
	rm -rf $(DOCDIR)

dvi:
	$(DOCGEN) $(DOXYFILE)

dist: clean
	mkdir -p package
	cp -r $(SRC_DIR) $(TEST_DIR) $(GUI_DIR) Makefile snake_readme.md package
	tar -czvf s21_snake.tar.gz package
	rm -rf package

clean:
	rm -rf $(BIN_DIR) $(BUILD_DIR) $(LIB_DIR) *.gc* *.info
